@{
    ViewData["Title"] = "Welcome";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-8 text-center">
            <div class="mb-4">
                <i class="bi bi-calendar-check-fill text-primary" style="font-size: 5rem;"></i>
            </div>
            <h1 class="display-4 fw-bold text-primary">Attendance Management System</h1>
            <p class="lead text-muted">
                A modern, scalable solution for tracking student attendance in academic institutions.
                Streamline your attendance process with our comprehensive digital platform.
            </p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Register
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mt-5 pt-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Key Features</h2>
            <p class="text-muted">Everything you need to manage attendance efficiently</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto" 
                         style="width: 64px; height: 64px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-shield-lock fs-4"></i>
                    </div>
                    <h5 class="card-title">Secure Authentication</h5>
                    <p class="card-text text-muted">
                        Role-based access control with JWT tokens. Separate dashboards for teachers and students.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-3 mx-auto" 
                         style="width: 64px; height: 64px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-check2-square fs-4"></i>
                    </div>
                    <h5 class="card-title">Easy Attendance Marking</h5>
                    <p class="card-text text-muted">
                        Teachers can mark attendance (Present/Absent/Late) with duplicate prevention.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle mb-3 mx-auto" 
                         style="width: 64px; height: 64px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-graph-up-arrow fs-4"></i>
                    </div>
                    <h5 class="card-title">Real-time Analytics</h5>
                    <p class="card-text text-muted">
                        Comprehensive reports with attendance percentages and exportable data.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-warning bg-gradient text-white rounded-circle mb-3 mx-auto" 
                         style="width: 64px; height: 64px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-journal-plus fs-4"></i>
                    </div>
                    <h5 class="card-title">Course Registration</h5>
                    <p class="card-text text-muted">
                        Students can easily register for courses and view their enrollment status.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-danger bg-gradient text-white rounded-circle mb-3 mx-auto" 
                         style="width: 64px; height: 64px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-file-earmark-excel fs-4"></i>
                    </div>
                    <h5 class="card-title">Export Reports</h5>
                    <p class="card-text text-muted">
                        Download attendance reports in PDF and Excel format for administrative use.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-secondary bg-gradient text-white rounded-circle mb-3 mx-auto" 
                         style="width: 64px; height: 64px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-cloud-upload fs-4"></i>
                    </div>
                    <h5 class="card-title">Cloud Deployment</h5>
                    <p class="card-text text-muted">
                        Deployed on cloud platform for accessibility anywhere, anytime.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- User Roles Section -->
    <div class="row mt-5 pt-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">For All Users</h2>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card border-primary h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-mortarboard me-2"></i>For Teachers</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Mark attendance for assigned courses</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>View attendance history</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Generate and export reports</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Track student performance</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-success h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-person me-2"></i>For Students</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Register for courses</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>View real-time attendance status</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Track attendance percentage</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Download personal reports</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
