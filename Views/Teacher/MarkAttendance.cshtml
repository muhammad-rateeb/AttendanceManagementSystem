@model MarkAttendanceViewModel
@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-check2-square me-2"></i>Mark Attendance</h2>
        <p class="text-muted mb-0">
            <span class="badge bg-secondary">@Model.CourseCode</span> @Model.CourseName
        </p>
    </div>
    <a asp-action="MyCourses" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Courses
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="mb-0"><i class="bi bi-calendar me-2"></i>Attendance for @Model.AttendanceDate.ToString("dddd, MMMM dd, yyyy")</h5>
            </div>
            <div class="col-md-6">
                <form asp-action="MarkAttendance" method="get" class="d-flex justify-content-end">
                    <input type="hidden" name="courseId" value="@Model.CourseId" />
                    <input type="date" name="date" value="@Model.AttendanceDate.ToString("yyyy-MM-dd")" 
                           class="form-control me-2" style="max-width: 200px;" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Students.Any())
        {
            <form asp-action="MarkAttendance" method="post" id="attendanceForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="CourseId" value="@Model.CourseId" />
                <input type="hidden" name="AttendanceDate" value="@Model.AttendanceDate.ToString("yyyy-MM-dd")" />

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 15%;">Reg. No.</th>
                                <th style="width: 25%;">Student Name</th>
                                <th style="width: 35%;">Status</th>
                                <th style="width: 20%;">Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Students.Count; i++)
                            {
                                var student = Model.Students[i];
                                <tr class="@(student.IsAlreadyMarked ? "table-info" : "")">
                                    <td>@(i + 1)</td>
                                    <td><code>@student.RegistrationNumber</code></td>
                                    <td>
                                        @student.StudentName
                                        @if (student.IsAlreadyMarked)
                                        {
                                            <span class="badge bg-warning ms-2">Already Marked</span>
                                        }
                                    </td>
                                    <td>
                                        <input type="hidden" name="Entries[@i].StudentId" value="@student.StudentId" />
                                        <div class="btn-group" role="group">
                                            <input type="radio" class="btn-check" name="Entries[@i].Status" 
                                                   id="present_@i" value="@((int)AttendanceStatus.Present)" 
                                                   @(student.Status == AttendanceStatus.Present ? "checked" : "") autocomplete="off">
                                            <label class="btn btn-outline-success" for="present_@i">
                                                <i class="bi bi-check-lg"></i> Present
                                            </label>

                                            <input type="radio" class="btn-check" name="Entries[@i].Status" 
                                                   id="absent_@i" value="@((int)AttendanceStatus.Absent)" 
                                                   @(student.Status == AttendanceStatus.Absent ? "checked" : "") autocomplete="off">
                                            <label class="btn btn-outline-danger" for="absent_@i">
                                                <i class="bi bi-x-lg"></i> Absent
                                            </label>

                                            <input type="radio" class="btn-check" name="Entries[@i].Status" 
                                                   id="late_@i" value="@((int)AttendanceStatus.Late)" 
                                                   @(student.Status == AttendanceStatus.Late ? "checked" : "") autocomplete="off">
                                            <label class="btn btn-outline-warning" for="late_@i">
                                                <i class="bi bi-clock"></i> Late
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <input type="text" name="Entries[@i].Remarks" value="@student.Remarks" 
                                               class="form-control form-control-sm" placeholder="Optional" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Quick Actions -->
                <div class="d-flex justify-content-between align-items-center mt-3 p-3 bg-light rounded">
                    <div>
                        <button type="button" class="btn btn-sm btn-outline-success me-2" onclick="markAll('Present')">
                            <i class="bi bi-check-all me-1"></i>Mark All Present
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="markAll('Absent')">
                            <i class="bi bi-x-circle me-1"></i>Mark All Absent
                        </button>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-2"></i>Save Attendance
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">No students enrolled in this course.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function markAll(status) {
            var statusValue;
            if (status === 'Present') statusValue = 1;
            else if (status === 'Absent') statusValue = 2;
            else if (status === 'Late') statusValue = 3;

            document.querySelectorAll('input[type="radio"][value="' + statusValue + '"]').forEach(function(radio) {
                radio.checked = true;
            });
        }
    </script>
}
