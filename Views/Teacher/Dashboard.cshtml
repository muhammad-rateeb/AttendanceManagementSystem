@model TeacherDashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-speedometer2 me-2"></i>Teacher Dashboard</h2>
    <span class="text-muted">Welcome, @Model.TeacherName</span>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">My Courses</h6>
                        <h2 class="mb-0">@Model.AssignedCourses.Count</h2>
                    </div>
                    <i class="bi bi-book fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Total Students</h6>
                        <h2 class="mb-0">@Model.TotalStudents</h2>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Today's Attendance</h6>
                        <h2 class="mb-0">@Model.TodaysClassesCount / @Model.AssignedCourses.Count</h2>
                    </div>
                    <i class="bi bi-calendar-check fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Assigned Courses -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-book me-2"></i>My Assigned Courses</h5>
        <a asp-action="MyCourses" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body">
        @if (Model.AssignedCourses.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th>Students</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.AssignedCourses)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@course.CourseCode</span></td>
                                <td>@course.CourseName</td>
                                <td>
                                    <span class="badge bg-primary">@course.EnrolledStudentsCount Students</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="MarkAttendance" asp-route-courseId="@course.CourseId" 
                                           class="btn btn-success">
                                            <i class="bi bi-check2-square me-1"></i>Mark Attendance
                                        </a>
                                        <a asp-action="ViewAttendance" asp-route-courseId="@course.CourseId" 
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>View
                                        </a>
                                        <a asp-action="AttendanceHistory" asp-route-courseId="@course.CourseId" 
                                           class="btn btn-outline-secondary">
                                            <i class="bi bi-clock-history me-1"></i>History
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">No courses assigned yet.</p>
            </div>
        }
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Reports" class="btn btn-outline-primary">
                        <i class="bi bi-graph-up me-2"></i>Generate Reports
                    </a>
                    <a asp-action="ExportReport" asp-route-format="excel" class="btn btn-outline-success">
                        <i class="bi bi-file-earmark-excel me-2"></i>Export to Excel
                    </a>
                    <a asp-action="ExportReport" asp-route-format="pdf" class="btn btn-outline-danger">
                        <i class="bi bi-file-earmark-pdf me-2"></i>Export to PDF
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Today's Summary</h5>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <i class="bi bi-calendar3 me-2 text-primary"></i>
                    <strong>Date:</strong> @DateTime.Today.ToString("dddd, MMMM dd, yyyy")
                </p>
                <p class="mb-2">
                    <i class="bi bi-check-circle me-2 text-success"></i>
                    <strong>Attendance Marked:</strong> @Model.TodaysClassesCount courses
                </p>
                <p class="mb-0">
                    <i class="bi bi-hourglass me-2 text-warning"></i>
                    <strong>Pending:</strong> @(Model.AssignedCourses.Count - Model.TodaysClassesCount) courses
                </p>
            </div>
        </div>
    </div>
</div>
