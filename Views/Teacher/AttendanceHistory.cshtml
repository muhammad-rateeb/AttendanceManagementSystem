@model IEnumerable<AttendanceManagementSystem.Models.Attendance>
@{
    ViewData["Title"] = "Attendance History";
    var course = ViewData["Course"] as Course;
    var startDate = (DateTime)ViewData["StartDate"];
    var endDate = (DateTime)ViewData["EndDate"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-clock-history me-2"></i>Attendance History</h2>
        <p class="text-muted mb-0">
            <span class="badge bg-secondary">@course?.CourseCode</span> @course?.CourseName
        </p>
    </div>
    <a asp-action="MyCourses" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Courses
    </a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter by Date Range</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" value="@startDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" value="@endDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-2"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    var groupedByDate = Model.GroupBy(a => a.AttendanceDate.Date).OrderByDescending(g => g.Key);
    
    @foreach (var dateGroup in groupedByDate)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-date me-2"></i>@dateGroup.Key.ToString("dddd, MMMM dd, yyyy")
                </h5>
                <div>
                    <span class="badge bg-success">Present: @dateGroup.Count(a => a.Status == AttendanceStatus.Present)</span>
                    <span class="badge bg-danger">Absent: @dateGroup.Count(a => a.Status == AttendanceStatus.Absent)</span>
                    <span class="badge bg-warning text-dark">Late: @dateGroup.Count(a => a.Status == AttendanceStatus.Late)</span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Student Name</th>
                                <th>Reg. No.</th>
                                <th>Status</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in dateGroup.OrderBy(a => a.Student?.FullName))
                            {
                                <tr>
                                    <td>@record.Student?.FullName</td>
                                    <td>@record.Student?.RegistrationNumber</td>
                                    <td>
                                        @if (record.Status == AttendanceStatus.Present)
                                        {
                                            <span class="badge bg-success">Present</span>
                                        }
                                        else if (record.Status == AttendanceStatus.Absent)
                                        {
                                            <span class="badge bg-danger">Absent</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Late</span>
                                        }
                                    </td>
                                    <td>@(record.Remarks ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No attendance records found for the selected date range.
    </div>
}
