@model List<TeacherCourseAssignmentViewModel>
@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-book me-2"></i>My Courses</h2>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@course.CourseCode</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@course.CourseName</h6>
                        <p class="card-text">
                            <span class="badge bg-info">@course.EnrolledStudentsCount Students Enrolled</span>
                        </p>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-grid gap-2">
                            <a asp-action="MarkAttendance" asp-route-courseId="@course.CourseId" 
                               class="btn btn-success">
                                <i class="bi bi-check2-square me-2"></i>Mark Attendance
                            </a>
                            <div class="btn-group">
                                <a asp-action="ViewAttendance" asp-route-courseId="@course.CourseId" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i>Today
                                </a>
                                <a asp-action="AttendanceHistory" asp-route-courseId="@course.CourseId" 
                                   class="btn btn-outline-secondary">
                                    <i class="bi bi-clock-history me-1"></i>History
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No Courses Assigned</h4>
            <p class="text-muted">You have not been assigned to any courses yet. Please contact the administrator.</p>
        </div>
    </div>
}
