@model AttendanceManagementSystem.Models.ViewModels.AvailableCoursesViewModel
@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book me-2"></i>My Courses</h2>
        <a asp-action="AvailableCourses" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Browse Available Courses
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.EnrolledCourses != null && Model.EnrolledCourses.Any())
    {
        <div class="row g-4">
            @foreach (var course in Model.EnrolledCourses)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-journal-bookmark me-2"></i>@course.CourseCode
                            </h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@course.CourseName</h5>
                            
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <small class="text-muted">Credit Hours</small>
                                        <p class="mb-0 fw-bold">@course.CreditHours</p>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Semester</small>
                                        <p class="mb-0 fw-bold">@course.Semester</p>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Instructor</small>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-person me-1"></i>@course.TeacherName
                                </span>
                            </div>

                            @if (course.EnrollmentDate.HasValue)
                            {
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">Enrolled On</small>
                                    <span class="text-muted">@course.EnrollmentDate.Value.ToString("MMMM dd, yyyy")</span>
                                </div>
                            }

                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i>Enrolled
                            </span>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between">
                                <a asp-action="CourseAttendance" asp-route-courseId="@course.CourseId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-calendar-check me-1"></i>View Attendance
                                </a>
                                <form asp-action="Unenroll" asp-route-courseId="@course.CourseId" method="post" 
                                      onsubmit="return confirm('Are you sure you want to unenroll from this course?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-x-circle me-1"></i>Unenroll
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-journal-x display-1 text-muted"></i>
                <h4 class="text-muted mt-3">You are not enrolled in any courses</h4>
                <p class="text-muted">Browse available courses and enroll to get started</p>
                <a asp-action="AvailableCourses" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Browse Courses
                </a>
            </div>
        </div>
    }
</div>
