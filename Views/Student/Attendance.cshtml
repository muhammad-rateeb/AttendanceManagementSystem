@model StudentAttendanceSummaryViewModel
@{
    ViewData["Title"] = "My Attendance";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check me-2"></i>My Attendance</h2>
    <div>
        <a asp-action="ExportReport" asp-route-format="pdf" class="btn btn-outline-danger me-2">
            <i class="bi bi-file-earmark-pdf me-2"></i>Download PDF
        </a>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

<!-- Overall Summary Card -->
<div class="card mb-4 border-0 shadow">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="mb-1">@Model.StudentName</h4>
                <p class="text-muted mb-0">
                    <span class="badge bg-secondary">@Model.RegistrationNumber</span>
                </p>
            </div>
            <div class="col-md-4 text-md-end">
                <h6 class="text-muted mb-1">Overall Attendance</h6>
                <h2 class="mb-0 @(Model.OverallAttendancePercentage >= 75 ? "text-success" : Model.OverallAttendancePercentage >= 50 ? "text-warning" : "text-danger")">
                    @Model.OverallAttendancePercentage%
                </h2>
            </div>
        </div>
        <div class="progress mt-3" style="height: 10px;">
            <div class="progress-bar @(Model.OverallAttendancePercentage >= 75 ? "bg-success" : Model.OverallAttendancePercentage >= 50 ? "bg-warning" : "bg-danger")" 
                 style="width: @Model.OverallAttendancePercentage%"></div>
        </div>
    </div>
</div>

<!-- Course-wise Attendance -->
@if (Model.CourseAttendances.Any())
{
    <div class="row g-4">
        @foreach (var course in Model.CourseAttendances)
        {
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@course.CourseName</h5>
                            <small class="text-muted">@course.CourseCode</small>
                        </div>
                        <div class="text-end">
                            <span class="badge fs-5 @(course.AttendancePercentage >= 75 ? "bg-success" : course.AttendancePercentage >= 50 ? "bg-warning" : "bg-danger")">
                                @course.AttendancePercentage%
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-3">
                            <div class="col-3">
                                <div class="border rounded p-2">
                                    <div class="fs-4 fw-bold text-primary">@course.TotalClasses</div>
                                    <small class="text-muted">Total</small>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="border rounded p-2">
                                    <div class="fs-4 fw-bold text-success">@course.PresentCount</div>
                                    <small class="text-muted">Present</small>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="border rounded p-2">
                                    <div class="fs-4 fw-bold text-danger">@course.AbsentCount</div>
                                    <small class="text-muted">Absent</small>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="border rounded p-2">
                                    <div class="fs-4 fw-bold text-warning">@course.LateCount</div>
                                    <small class="text-muted">Late</small>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Attendance -->
                        <h6 class="mt-3 mb-2">Recent Attendance</h6>
                        @if (course.RecentAttendance.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var record in course.RecentAttendance.Take(5))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <span>@record.Date.ToString("ddd, MMM dd, yyyy")</span>
                                        @if (record.Status == AttendanceStatus.Present)
                                        {
                                            <span class="badge bg-success">Present</span>
                                        }
                                        else if (record.Status == AttendanceStatus.Absent)
                                        {
                                            <span class="badge bg-danger">Absent</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Late</span>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">No attendance records yet.</p>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-action="AttendanceDetails" asp-route-courseId="@course.CourseId" 
                           class="btn btn-sm btn-outline-primary w-100">
                            <i class="bi bi-eye me-2"></i>View Full History
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No Attendance Records</h4>
            <p class="text-muted">You don't have any attendance records yet.</p>
            <a asp-action="RegisterCourses" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Register for Courses
            </a>
        </div>
    </div>
}
