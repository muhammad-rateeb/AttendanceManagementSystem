@model AttendanceManagementSystem.Models.Section
@{
    ViewData["Title"] = "Create Section";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Section</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateSection" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="SectionName" class="form-label"></label>
                            <input asp-for="SectionName" class="form-control" placeholder="e.g., Section A, Morning Batch" />
                            <span asp-validation-for="SectionName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxCapacity" class="form-label"></label>
                            <input asp-for="MaxCapacity" type="number" class="form-control" min="1" max="500" />
                            <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Sections" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Section
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
