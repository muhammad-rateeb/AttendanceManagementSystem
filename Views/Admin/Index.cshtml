@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h2>
    <span class="text-muted">System Overview</span>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Students</h6>
                        <h2 class="mb-0">@ViewData["StudentCount"]</h2>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-action="Users" class="text-white text-decoration-none">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Teachers</h6>
                        <h2 class="mb-0">@ViewData["TeacherCount"]</h2>
                    </div>
                    <i class="bi bi-mortarboard fs-1"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-action="Users" class="text-white text-decoration-none">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Courses</h6>
                        <h2 class="mb-0">@ViewData["CourseCount"]</h2>
                    </div>
                    <i class="bi bi-book fs-1"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-action="Courses" class="text-white text-decoration-none">
                    Manage <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Enrollments</h6>
                        <h2 class="mb-0">@ViewData["TotalEnrollments"]</h2>
                    </div>
                    <i class="bi bi-journal-check fs-1"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-action="Reports" class="text-white text-decoration-none">
                    Reports <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-6">
                        <a asp-action="CreateUser" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-person-plus d-block fs-2 mb-2"></i>
                            Add User
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-action="CreateCourse" class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-book d-block fs-2 mb-2"></i>
                            Add Course
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-action="Reports" class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-graph-up d-block fs-2 mb-2"></i>
                            View Reports
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-action="ExportReport" asp-route-format="excel" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-file-earmark-excel d-block fs-2 mb-2"></i>
                            Export Data
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>System Management</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-action="Users" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-people me-2"></i>Manage Users</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a asp-action="Courses" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-book me-2"></i>Manage Courses</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a asp-action="Reports" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-graph-up me-2"></i>Attendance Reports</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a asp-controller="Teacher" asp-action="Dashboard" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-eye me-2"></i>View as Teacher</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
