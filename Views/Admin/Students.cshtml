@model List<AttendanceManagementSystem.Models.ViewModels.StudentListViewModel>
@{
    ViewData["Title"] = "Manage Students";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Manage Students</h2>
        <a asp-action="CreateStudent" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Registration No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Enrolled Courses</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.RegistrationNumber</td>
                                <td>@student.FullName</td>
                                <td>@student.Email</td>
                                <td><span class="badge bg-info">@student.EnrolledCourses</span></td>
                                <td>
                                    @if (student.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>@student.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="ManageStudentEnrollments" asp-route-id="@student.Id" class="btn btn-outline-info" title="Manage Enrollments">
                                            <i class="bi bi-journal-bookmark"></i>
                                        </a>
                                        <form asp-action="DeleteStudent" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this student?');">
                                            <input type="hidden" name="id" value="@student.Id" />
                                            <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="bi bi-people display-4 text-muted"></i>
                    <p class="text-muted mt-2">No students found.</p>
                </div>
            }
        </div>
    </div>
</div>
